{
  "manifest_version": 3,
  "name": "NXT STOP",
  "version": "1.0",
  "description": "Live location tracking and stop alert extension.",
  "icons": {
    "16": "icon.png",
    "48": "icon.png",
    "128": "icon.png"
  },
  "permissions": [
    "geolocation",
    "notifications",
    "storage"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": "icon.png"
  }
}

  